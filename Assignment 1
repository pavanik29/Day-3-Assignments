#include<stdio.h>
main()
{
	int i,j,m,n,a[10],b[10],c[20];
	printf("\n enter number of elements of first array:");
	scanf("%d",&m);
	printf("\nenter the elements of first array:");
	for(i=0;i<m;i++)
	scanf("%d",&a[i]);
	printf("\n enter number of elements of second array:");
	scanf("%d",&n);
	printf("\nenter the elements of second array:");
	for(i=0;i<n;i++)
	scanf("%d",&b[i]);
	for(i=0;i<m;i++)
	c[i]=a[i];
	j=i;
	for(i=0;i<n;i++,j++)
	c[j]=b[i];
	printf("the merged array is:");
	for(i=0;i<m+n;i++)
	printf("%d\t",c[i]);
}
